%form
  .row
    .col-md-6
      %article.panel.panel-primary
        %header.panel-heading
          %h1.h3 Customer
        %section.panel-body
          .row
            .col-md-4
              .form-group
                %label.sr-only{ for: 'first-name' } First Name
                %input.form-control{ type: 'text',
                                      name: 'first-name', value: 'Bob' }
            .col-md-4
              .form-group
                %label.sr-only{ for: 'last-name' } Last Name
                %input.form-control{ type: 'text',
                                      name: 'last-name', value: 'Jones' }
            .col-md-4
              .form-group
                %label.sr-only{ for: 'username' } Username
                .input-group
                  .input-group-addon @
                  %input.form-control{ type: 'text',
                                        name: 'username', value: 'bobers123' }
            .col-md-12
              .form-group
                %label.sr-only{ for: 'email' } Email
                %input.form-control{ type: 'text', name: 'email',
                                    value: 'bobbyj@somewhere.net' }
        %footer.panel-footer
          %label{ for: 'joined' } Joined
          12/13/2014
      %article.panel.panel-default
        %header.panel-heading
          %h2.h4 Shipping Address
        %section.panel-body
          .form-group
            %label.sr-only{ for: 'street-address' } Street Address
            %input.form-control{ type: 'text', name: 'street-address',
                                  value: '123 Any St' }
          .form-group
            %label.sr-only{ for: 'street-address-extra' } Street Address Extra
            %input.form-control{ type: 'text', name: 'street-address-extra',
                                  value: 'Unit 101' }
          .row.form-group
            .col-md-6
              %label.sr-only{ for: 'city' } City
              %input.form-control{ type: 'text', name: 'city',
                                  value: 'Washington' }
            .col-md-2
              %label.sr-only{ for: 'state' } State
              %input.form-control{ type: 'text', name: 'state',
                                    value: 'DC' }
            .col-md-4
              %label.sr-only{ for: 'zip' } Zip
              %input.form-control{ type: 'text', name: 'zip',
                                    value: '20001' }
    .col-md-6
      %article.panel.panel-default
        %header.panel-heading
          %h2.h4 Billing Info
        %section.panel-body
          %article
            .row
              .col-md-7
                %p.h4
                  ****-****-****-1234
                  %span.label.label-success VISA
                %p.h5
                  %label Expires :
                  04/19
              .col-md-5.text-right
                %button.btn.btn-lg.btn-default View Details...
          %hr
          %article.well.well-sm
            %header
              %h1.h5
                Billing Address
                %small
                  %label
                    %input{ type: 'checkbox' } Same as shipping?
            .form-group
              %label.sr-only{ for: 'street-address' } Street Address
              %input.form-control{ type: 'text', name: 'street-address',
                                    value: '123 Any St' }
            .form-group
              %label.sr-only{ for: 'street-address-extra' } Street Address Extra
              %input.form-control{ type: 'text', name: 'street-address-extra',
                                    value: 'Unit 101' }
            .row
              .col-md-6
                .form-group
                  %label.sr-only{ for: 'city' } City
                  %input.form-control{ type: 'text', name: 'city',
                                      value: 'Washington' }
              .col-md-2
                .form-group
                  %label.sr-only{ for: 'state' } State
                  %input.form-control{ type: 'text', name: 'state',
                                      value: 'DC' }
              .col-md-4
                .form-group
                  %label.sr-only{ for: 'zip' } Zip
                  %input.form-control{ type: 'text', name: 'zip',
                                      value: '20001' }
